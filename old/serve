<?php

use Libraries\Str;

require_once __DIR__ . DIRECTORY_SEPARATOR . 'bootstrap.php';

/**
 * @var \Libraries\Router
 */
$router = require __DIR__ . DIRECTORY_SEPARATOR . 'routes.php';

echo "\n";

collect($router->getAll())->each(function ($route) {
	echo sprintf('Registered { %s } - %s', $route['uri'], Str::from($route['method'])->toUpperCase());
	echo "\n";
});

// Create a local server
// Command is 'php serve'
exec('php -S 0.0.0.0:8000 -t public' . DIRECTORY_SEPARATOR);
